<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.AndroidProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/grey_800</item> <!-- Changed from purple -->
    </style>

    <!-- Toolbar Style -->
    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/grey_800</item>
    </style>

    <!-- Small Text for Menu -->
    <style name="MenuTextSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- ✅ RecyclerView Item Style updated for light/dark mode -->
    <style name="RecyclerViewItemStyle">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">?android:textColorPrimary</item> <!-- ✅ Dynamic color -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuTextAppearance.Light" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MenuTextAppearance.Dark" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppPopupMenuLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/menu_text_color_light</item>
    </style>

    <style name="AppPopupMenuDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/menu_text_color_dark</item>
    </style>



</resources>
